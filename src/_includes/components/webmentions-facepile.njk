<div class="webmentions__facepile">
  {% for facepileMention in facepileMentions | reverse %}
    <a href="{{ facepileMention.url }}" class="webmentions__face-link" target="_blank" rel="external nofollow noopener noreferrer">
      <div class="webmention__author-photo-wrapper">
        <img src="{{ facepileMention.photo or '/static/images/webmention-avatar-default.svg' }}" alt="{{ facepileMention.name }}" class="webmention__author-photo-image" loading="lazy" decoding="async" width="48" height="48">
      </div>
    </a>
  {% endfor %}
</div>
